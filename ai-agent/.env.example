# Environment configuration for AI Agent
# Copy this file to .env and update the values as needed
# For Docker deployment, use Docker service names (mongodb, ollama-gpu, verifiable-contract)
# For local development, use localhost

# MongoDB Configuration (Docker: mongodb, Local: localhost)
MONGODB_URI=mongodb://doc2formapp:apppassword123@mongodb:27017/doc2formjson?authSource=admin
MONGODB_DATABASE=doc2formjson
FORMS_COLLECTION=generated_form

# Ollama Configuration (Docker: ollama-gpu, Local: localhost)
OLLAMA_HOST=http://ollama-gpu:11434
OLLAMA_MODEL=qwen2.5vl:latest
OLLAMA_KEEP_ALIVE=20m
OLLAMA_TIMEOUT=10000

# API Endpoints (Docker: verifiable-contract, Local: localhost)
VERIFIABLE_CONTRACT_API=http://verifiable-contract:3002/api/urls
FRONTEND_BASE_URL=http://localhost:4200

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Logging
LOG_LEVEL=INFO
